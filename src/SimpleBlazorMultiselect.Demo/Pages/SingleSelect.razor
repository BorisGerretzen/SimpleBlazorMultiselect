@page "/SingleSelect"
<h3>SingleSelect</h3>

<div class="row">
    <div class="col-4">
        <SimpleMultiselect
            Options="@Globals.EuropeanCapitals"
            IsMultiSelect="false"
            @bind-SelectedOptions="_selectedItems"/>
    </div>
    <div class="col-4">
        You have selected the following item: <strong>@_selectedItems.FirstOrDefault()</strong>
    </div>
</div>

@code {
    private HashSet<string> _selectedItems = new();
}